{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@store/*": ["app/store/*"],
      "@hooks/*": ["hooks/*"],
      "@namespace/*": ["app/store/namespace/*"],
      "@reducer/*": ["app/store/reducer/*"],
      "@slice/*": ["app/store/slice/*"],
      "@service/*": ["service/*"],
      "@api/*": ["service/api/*"],
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@layout/*": ["components/layout/*"],
      "@app-layout/*": ["components/layout/AppLayout/*"],
      "@app-header/*": ["components/layout/Header/*"],
      "@app-footer/*": ["components/layout/Footer/*"],
      "@app-ui/*": ["components/ui/*"],
      "@utils/*": ["utils/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
